{
  "ConnectionStrings": {
    "DefaultConnection": "Host=staging-postgres-db;Port=5432;Database=OrderManagementDb_Staging;Username=postgres;Password=${DB_PASSWORD}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Environment": "Staging",
  "ApiSettings": {
    "BaseUrl": "https://staging-api.yourcompany.com",
    "EnableDetailedErrors": true,
    "EnableSwagger": true
  },
  "Cors": {
    "AllowedOrigins": [
      "https://staging.yourcompany.com"
    ]
  }
}
