{
  "ConnectionStrings": {
    "DefaultConnection": "Host=qa-postgres-db;Port=5432;Database=OrderManagementDb_QA;Username=postgres;Password=${DB_PASSWORD}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Environment": "QA",
  "ApiSettings": {
    "BaseUrl": "https://qa-api.yourcompany.com",
    "EnableDetailedErrors": true,
    "EnableSwagger": true
  },
  "Cors": {
    "AllowedOrigins": [
      "https://qa.yourcompany.com",
      "http://localhost:3000"
    ]
  }
}
